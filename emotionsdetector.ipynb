import cv2
import matplotlib.pyplot as plt
from deepface import DeepFace
import pandas as pd
import numpy as np

# Function to analyze emotions in an image
def analyze_emotions(image_path):
    # Read the image
    img = cv2.imread(image_path)
    img_rgb = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)
    
    # Analyze emotions
    try:
        analysis = DeepFace.analyze(img_path=image_path, 
                                   actions=['emotion'],
                                   enforce_detection=False)
        
        # Extract emotion data
        if isinstance(analysis, list):
            analysis = analysis[0]  # Get first face if multiple faces detected
            
        emotions = analysis['emotion']
        dominant_emotion = analysis['dominant_emotion']
        
        # Display results
        plt.figure(figsize=(10, 8))
        
        # Plot the image
        plt.subplot(1, 2, 1)
        plt.imshow(img_rgb)
        plt.title(f"Dominant emotion: {dominant_emotion}")
        plt.axis('off')
        
        # Plot emotion distribution
        plt.subplot(1, 2, 2)
        emotions_df = pd.DataFrame(list(emotions.items()), columns=['Emotion', 'Score'])
        emotions_df = emotions_df.sort_values(by='Score', ascending=False)
        
        bars = plt.bar(emotions_df['Emotion'], emotions_df['Score'], color='skyblue')
        bars[0].set_color('orange')  # Highlight dominant emotion
        plt.title('Emotion Analysis')
        plt.ylabel('Confidence Score (%)')
        plt.xticks(rotation=45)
        
        plt.tight_layout()
        plt.show()
        
        return emotions, dominant_emotion
    
    except Exception as e:
        print(f"Error in analysis: {e}")
        return None, None

# Example usage
# Replace 'path_to_your_image.jpg' with your actual image path
image_path = 'path_to_your_image.jpg'
emotions, dominant_emotion = analyze_emotions(image_path)

# For analyzing emotions in real-time using webcam
def analyze_emotions_realtime():
    cap = cv2.VideoCapture(0)
    
    if not cap.isOpened():
        print("Cannot open webcam")
        return
    
    while True:
        ret, frame = cap.read()
        if not ret:
            break
            
        # Analyze every few frames to improve performance
        try:
            analysis = DeepFace.analyze(img_path=frame, 
                                      actions=['emotion'],
                                      enforce_detection=False,
                                      detector_backend='opencv')
            
            if isinstance(analysis, list):
                analysis = analysis[0]
                
            dominant_emotion = analysis['dominant_emotion']
            
            # Display the result on the frame
            cv2.putText(frame, f"Emotion: {dominant_emotion}", 
                       (10, 30), cv2.FONT_HERSHEY_SIMPLEX, 
                       0.8, (0, 255, 0), 2)
        except:
            pass
        
        # Display the frame
        cv2.imshow('Emotion Analysis', frame)
        
        # Break loop with 'q' key
        if cv2.waitKey(1) & 0xFF == ord('q'):
            break
    
    cap.release()
    cv2.destroyAllWindows()
    

# Uncomment to run real-time analysis
analyze_emotions_realtime()
